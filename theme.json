{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "848px",
      "wideSize": "1300px"
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    },
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        {
          "slug": "primary",
          "color": "#fdd11f",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#3ba7fa",
          "name": "Secondary"
        },
        {
          "slug": "primary-dark",
          "color": "#f0c000",
          "name": "Primary Dark"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "black",
          "color": "#292929",
          "name": "Black"
        },
        {
          "slug": "gray",
          "color": "#595959",
          "name": "Gray"
        },
        {
          "slug": "light-gray",
          "color": "#f7f8f9",
          "name": "Light Gray"
        },
        {
          "slug": "border-gray",
          "color": "#eaecee",
          "name": "Border Gray"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "lineHeight": true,
      "fontFamilies": [
        {
          "fontFamily": "\"Lora\", serif",
          "slug": "lora",
          "name": "Lora"
        },
        {
          "fontFamily": "\"Inter\", sans-serif",
          "slug": "inter",
          "name": "Inter"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small (14px)"
        },
        {
          "slug": "medium",
          "size": "1.125rem",
          "name": "Medium (18px)"
        },
        {
          "slug": "large",
          "size": "2rem",
          "name": "Large (32px)"
        },
        {
          "slug": "x-large",
          "size": "2.375rem",
          "name": "Extra Large (38px)"
        },
        {
          "slug": "huge",
          "size": "3.125rem",
          "name": "Huge (50px)"
        }
      ]
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true,
      "customSpacingSize": true,
      "spacingScale": {
        "operator": "+",
        "increment": 0.5,
        "steps": 7,
        "mediumStep": 2.5,
        "unit": "rem"
      },
      "units": [
        "px",
        "rem"
      ]
    }
  },
  "styles": {
    "color": {
      "text": "var(--wp--preset--color--black)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--lora)",
      "lineHeight": "1.725",
      "fontSize": "19px"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "30px",
        "bottom": "0",
        "left": "30px"
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "top": "0",
            "right": "0",
            "bottom": "1.25rem",
            "left": "0"
          }
        }
      },
      "core/separator": {
        "spacing": {
          "margin": {
            "top": "2.5rem",
            "right": "0",
            "bottom": "2.5rem",
            "left": "0"
          }
        },
        "border":{
          "color": "var(--wp--preset--color--border-gray)"
        }
      },
      "core/spacer": {
        "color": {
          "background": "var(--wp--preset--color--light-gray)"
        }
      },
      "core/buttons": {
        "spacing": {
          "margin": {
            "top": "1.5rem",
            "right": "0",
            "bottom": "1.5rem",
            "left": "0"
          }
        }
      },
      "core/list": {
        "spacing": {
          "margin": {
            "top": "0",
            "right": "0",
            "bottom": "1.25rem",
            "left": "0"
          }
        }
      },
      "core/list-item": {
        "spacing": {
          "margin": {
            "top": "0",
            "right": "0",
            "bottom": "1rem",
            "left": "0"
          }
        }
      },
      "core/image": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--inter)"
        },
        "spacing": {
          "margin": {
            "top": "1.5rem",
            "right": "0",
            "bottom": "1.5rem",
            "left": "0"
          }
        }
      },
      "core/quote": {
        "typography": {
          "fontSize": "1.875rem",
          "lineHeight": "1.46"
        },
        "spacing": {
          "margin": {
            "top": "1.5rem",
            "right": "0",
            "bottom": "1.5rem",
            "left": "0"
          },
          "padding": {
            "top": "10px",
            "right": "0",
            "bottom": "5px",
            "left": "30px"
          }
        },
        "border":{
          "radius": "0",
          "style": "solid",
          "width": "0 0 0 5px",
          "color": "var(--wp--preset--color--border-gray)"
        }
      }
    },
    "elements": {
      "button": {
        "typography": {
          "fontWeight": "600",
          "fontSize": "1.125rem",
          "lineHeight": "1.1",
          "fontFamily": "var(--wp--preset--font-family--inter)"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--black)"
        },
        "border": {
          "radius": "25px",
          "width": "0",
          "style": "solid"
        },
        "spacing": {
          "padding": {
            "top": "15px",
            "right": "40px",
            "bottom": "15px",
            "left": "40px"
          }
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--inter)",
          "fontWeight": "800"
        },
        "color": {
          "text": "var(--wp--preset--color--black)"
        },
        "spacing": {
          "margin": {
            "bottom": "10px"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "50px",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "38px",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "top": "50px",
            "bottom": "20px"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "32px",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "top": "50px",
            "bottom": "20px"
          }
        }
      },
      "h4": {
        "typography": {
          "fontSize": "26px",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "top": "50px",
            "bottom": "20px"
          }
        }
      },
      "link": {
        "border": {
          "color" : "var(--wp--preset--color--primary)",
          "style" : "solid",
          "width" : "0 0 2px 0"
        },
        "color": {
          "text": "var(--wp--preset--color--black)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--lora)",
          "fontWeight": "700",
          "textDecoration": "none"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--black)"
          },
          "border": {
            "color" : "var(--wp--preset--color--secondary)",
            "style" : "solid",
            "width" : "0 0 2px 0"
          }
        }
      }
    }
  }
}