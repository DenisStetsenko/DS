{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "848px",
      "wideSize": "1300px"
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    },
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        {
          "slug": "primary",
          "color": "#fdd11f",
          "name": "Primary"
        },
        {
          "slug": "primary-dark",
          "color": "#f0c000",
          "name": "Primary Dark"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "black",
          "color": "#292929",
          "name": "Black"
        },
        {
          "slug": "gray",
          "color": "#595959",
          "name": "Gray"
        },
        {
          "slug": "light-gray",
          "color": "#f7f8f9",
          "name": "Light Gray"
        },
        {
          "slug": "border-gray",
          "color": "#eaecee",
          "name": "Border Gray"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
	  "lineHeight": true,
      "fontFamilies": [
        {
          "fontFamily": "\"Lora\", serif",
          "slug": "lora",
          "name": "Lora"
        },
        {
          "fontFamily": "\"Inter\", sans-serif",
          "slug": "inter",
          "name": "Inter"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small (14px)"
        },
        {
          "slug": "medium",
          "size": "1.125rem",
          "name": "Medium (18px)"
        },
        {
          "slug": "large",
          "size": "2.25rem",
          "name": "Large (36px)"
        },
        {
          "slug": "x-large",
          "size": "2.75rem",
          "name": "Extra Large (44px)"
        },
        {
          "slug": "huge",
          "size": "3.375rem",
          "name": "Huge (54px)"
        }
      ]
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true,
      "customSpacingSize": true,
      "spacingScale": {
        "operator": "+",
        "increment": 0.5,
        "steps": 7,
        "mediumStep": 2.5,
        "unit": "rem"
      },
      "units": [
        "px",
        "rem"
      ]
    }
  },
  "styles": {
    "color": {
      "text": "var(--wp--preset--color--black)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--lora)",
      "lineHeight": "1.65",
      "fontSize": "20px"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "30px",
        "bottom": "0",
        "left": "30px"
      }
    },
    "elements": {
      "button": {
        "typography": {
          "fontWeight": "600",
          "fontSize": "1.125rem",
          "lineHeight": "1.1",
          "fontFamily": "var(--wp--preset--font-family--inter)"
        },
        "color": {
          "background": "#fdd11f",
          "text": "#292929"
        },
        "border": {
          "radius": "25px",
          "width": "0",
          "style": "solid"
        },
        "spacing": {
          "padding": {
            "top": "15px",
            "right": "40px",
            "bottom": "15px",
            "left": "40px"
          }
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--inter)",
          "fontWeight": "800"
        },
        "color": {
          "text": "#292929"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "48px",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "36px",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "top": "45px",
            "bottom": "9px"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "28px",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "top": "45px",
            "bottom": "9px"
          }
        }
      }
    }
  }
}